<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="DocxTemplate.UI.App"
             xmlns:local="using:DocxTemplate.UI"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme />
        
        <!-- Global style to use SelectableTextBlock styling for better text selection -->
        <Style Selector="SelectableTextBlock">
            <Setter Property="SelectionBrush" Value="{DynamicResource SystemAccentColor}" />
        </Style>
    </Application.Styles>
</Application>