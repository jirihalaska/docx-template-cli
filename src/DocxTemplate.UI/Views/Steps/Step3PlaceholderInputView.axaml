<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:DocxTemplate.UI.Converters"
             xmlns:vm="clr-namespace:DocxTemplate.UI.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="DocxTemplate.UI.Views.Steps.Step3PlaceholderInputView"
             x:DataType="vm:PlaceholderInputViewModel">

  <UserControl.Resources>
    <converters:BooleanToThicknessConverter x:Key="BooleanToThicknessConverter" />
  </UserControl.Resources>

  <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
          CornerRadius="8"
          Padding="20">
    <Grid RowDefinitions="Auto,Auto,Auto,Auto,*,Auto,Auto">
      
      <!-- Step Title -->
      <SelectableTextBlock Grid.Row="0"
                 Text="Zadání hodnot zástupných symbolů"
                 FontSize="24"
                 FontWeight="Bold"
                 HorizontalAlignment="Center"
                 Margin="0,0,0,10" />
      
      <!-- Step Description -->
      <SelectableTextBlock Grid.Row="1"
                 Text="Zadejte hodnoty pro nalezené zástupné symboly."
                 FontSize="14"
                 Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                 HorizontalAlignment="Center"
                 TextWrapping="Wrap"
                 Margin="0,0,0,15" />
      
      <!-- Completion Summary -->
      <Border Grid.Row="2"
              Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
              CornerRadius="4"
              Padding="12,8"
              Margin="0,0,0,15">
        <Grid ColumnDefinitions="*,Auto">
          <SelectableTextBlock Grid.Column="0"
                     Text="{Binding CompletionSummary}"
                     FontWeight="SemiBold"
                     VerticalAlignment="Center" />
          <Button Grid.Column="1"
                  Command="{Binding ClearAllCommand}"
                  Content="Vymazat vše"
                  Padding="12,6"
                  Background="{DynamicResource SystemControlBackgroundBaseMediumLowBrush}"
                  HorizontalAlignment="Right" />
        </Grid>
      </Border>
      
      <!-- Table Header -->
      <Border Grid.Row="3"
              Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
              CornerRadius="4,4,0,0"
              Padding="12,8"
              BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
              BorderThickness="1,1,1,0">
        <Grid ColumnDefinitions="2*,3*,Auto">
          <SelectableTextBlock Grid.Column="0" 
                     Text="Zástupný symbol"
                     FontWeight="SemiBold"
                     FontSize="13" />
          <SelectableTextBlock Grid.Column="1" 
                     Text="Hodnota"
                     FontWeight="SemiBold"
                     FontSize="13"
                     Margin="12,0,0,0" />
          <SelectableTextBlock Grid.Column="2" 
                     Text="Výskyty"
                     FontWeight="SemiBold"
                     FontSize="13"
                     Margin="12,0,0,0" />
        </Grid>
      </Border>

      <!-- Scrollable Placeholder Input Table -->
      <ScrollViewer Grid.Row="4"
                    VerticalScrollBarVisibility="Auto"
                    HorizontalScrollBarVisibility="Disabled"
                    Padding="0"
                    Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                    BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                    BorderThickness="1,0,1,1"
                    CornerRadius="0,0,4,4">
        <ItemsControl ItemsSource="{Binding PlaceholderInputs}">
          <ItemsControl.ItemTemplate>
            <DataTemplate x:DataType="vm:PlaceholderInputItemViewModel">
              <Border BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                      BorderThickness="0,0,0,1"
                      Padding="12,8"
                      Background="{Binding IsFilled, Converter={x:Static converters:BooleanToBrushConverter.Instance}, 
                                   ConverterParameter='Transparent|#FFF3CD'}">
                <Grid ColumnDefinitions="2*,3*,Auto" MinHeight="32">
                  
                  <!-- Placeholder Name with Warning Icon -->
                  <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border IsVisible="{Binding !IsFilled}"
                            Background="Orange"
                            CornerRadius="8"
                            Width="16"
                            Height="16"
                            VerticalAlignment="Center"
                            Margin="0,0,8,0">
                      <SelectableTextBlock Text="!"
                                 Foreground="White"
                                 FontSize="10"
                                 FontWeight="Bold"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center" />
                    </Border>
                    <SelectableTextBlock Text="{Binding DisplayLabel}"
                               FontSize="13"
                               VerticalAlignment="Center"
                               TextWrapping="Wrap" />
                  </StackPanel>
                  
                  <!-- Input Controls - Different for Text vs Image placeholders -->
                  <Grid Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                    <!-- Text Input for Regular Placeholders -->
                    <TextBox IsVisible="{Binding !IsImagePlaceholder}"
                             Text="{Binding InputValue}"
                             Watermark="Zadejte hodnotu..."
                             FontSize="13"
                             MinHeight="28"
                             Padding="8,4"
                             VerticalAlignment="Center"
                             VerticalContentAlignment="Center"
                             Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" />
                    
                    <!-- Image Selection for Image Placeholders -->
                    <StackPanel IsVisible="{Binding IsImagePlaceholder}" Orientation="Vertical" Spacing="4">
                      <Grid ColumnDefinitions="*,Auto,Auto">
                        <!-- Image File Path Display -->
                        <TextBox Grid.Column="0"
                                 Text="{Binding SelectedImageFileName}"
                                 Watermark="Žádný obrázek nevybrán..."
                                 IsReadOnly="True"
                                 FontSize="13"
                                 MinHeight="28"
                                 Padding="8,4"
                                 VerticalAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" />
                        
                        <!-- Select Image Button -->
                        <Button Grid.Column="1"
                                Command="{Binding SelectImageCommand}"
                                Content="Vybrat..."
                                FontSize="12"
                                Padding="8,4"
                                MinHeight="28"
                                Margin="4,0,0,0"
                                VerticalAlignment="Center" />
                        
                        <!-- Clear Image Button -->
                        <Button Grid.Column="2"
                                Command="{Binding ClearImageCommand}"
                                Content="×"
                                FontSize="14"
                                FontWeight="Bold"
                                Padding="6,4"
                                MinHeight="28"
                                MinWidth="28"
                                Margin="4,0,0,0"
                                VerticalAlignment="Center"
                                ToolTip.Tip="Vymazat vybraný obrázek" />
                      </Grid>
                      
                      <!-- Image Dimensions Info -->
                      <SelectableTextBlock Text="{Binding ImageDimensionsText}"
                                 FontSize="11"
                                 FontStyle="Italic"
                                 Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                 IsVisible="{Binding IsImagePlaceholder}" />
                    </StackPanel>
                  </Grid>
                  
                  <!-- Occurrence Count -->
                  <SelectableTextBlock Grid.Column="2"
                             Text="{Binding OccurrenceCount}"
                             FontSize="12"
                             Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Center"
                             Margin="12,0,0,0" />
                  
                </Grid>
              </Border>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>
      </ScrollViewer>
      
      <!-- Warning Message -->
      <Border Grid.Row="5"
              Background="#FFF3CD"
              BorderBrush="#FFEAA7"
              BorderThickness="1"
              CornerRadius="4"
              Padding="12,10"
              Margin="0,15,0,0">
        <Grid ColumnDefinitions="Auto,*">
          <Border Grid.Column="0"
                  Background="Orange"
                  CornerRadius="10"
                  Width="20"
                  Height="20"
                  VerticalAlignment="Top"
                  Margin="0,0,10,0">
            <SelectableTextBlock Text="!"
                       Foreground="White"
                       FontSize="12"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />
          </Border>
          <SelectableTextBlock Grid.Column="1"
                     Text="{Binding UnfilledWarningText}"
                     TextWrapping="Wrap"
                     FontSize="13"
                     Foreground="#856404" />
        </Grid>
      </Border>
      
      <!-- Instructions -->
      <SelectableTextBlock Grid.Row="6"
                 Text="Můžete pokračovat i s nevyplněnými zástupnými symboly. Použijte tlačítko 'Zpět' pro návrat k předchozímu kroku."
                 FontSize="12"
                 FontStyle="Italic"
                 TextWrapping="Wrap"
                 HorizontalAlignment="Center"
                 Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                 Margin="0,10,0,0" />
                 
    </Grid>
  </Border>

</UserControl>