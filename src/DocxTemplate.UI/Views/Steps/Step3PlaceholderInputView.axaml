<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:DocxTemplate.UI.Converters"
             xmlns:vm="clr-namespace:DocxTemplate.UI.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="DocxTemplate.UI.Views.Steps.Step3PlaceholderInputView"
             x:DataType="vm:PlaceholderInputViewModel">

  <UserControl.Resources>
    <converters:BooleanToThicknessConverter x:Key="BooleanToThicknessConverter" />
  </UserControl.Resources>

  <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
          CornerRadius="8"
          Padding="20">
    <Grid RowDefinitions="Auto,Auto,Auto,*,Auto,Auto">
      
      <!-- Step Title -->
      <SelectableTextBlock Grid.Row="0"
                 Text="Zadání hodnot zástupných symbolů"
                 FontSize="24"
                 FontWeight="Bold"
                 HorizontalAlignment="Center"
                 Margin="0,0,0,10" />
      
      <!-- Step Description -->
      <SelectableTextBlock Grid.Row="1"
                 Text="Zadejte hodnoty pro nalezené zástupné symboly."
                 FontSize="14"
                 Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                 HorizontalAlignment="Center"
                 TextWrapping="Wrap"
                 Margin="0,0,0,15" />
      
      <!-- Completion Summary -->
      <Border Grid.Row="2"
              Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
              CornerRadius="4"
              Padding="12,8"
              Margin="0,0,0,15">
        <Grid ColumnDefinitions="*,Auto">
          <SelectableTextBlock Grid.Column="0"
                     Text="{Binding CompletionSummary}"
                     FontWeight="SemiBold"
                     VerticalAlignment="Center" />
          <Button Grid.Column="1"
                  Command="{Binding ClearAllCommand}"
                  Content="Vymazat vše"
                  Padding="12,6"
                  Background="{DynamicResource SystemControlBackgroundBaseMediumLowBrush}"
                  HorizontalAlignment="Right" />
        </Grid>
      </Border>
      
      <!-- Scrollable Placeholder Input Form -->
      <ScrollViewer Grid.Row="3"
                    VerticalScrollBarVisibility="Auto"
                    HorizontalScrollBarVisibility="Disabled"
                    Padding="0,0,10,0">
        <ItemsControl ItemsSource="{Binding PlaceholderInputs}">
          <ItemsControl.ItemTemplate>
            <DataTemplate x:DataType="vm:PlaceholderInputItemViewModel">
              <Border Margin="0,0,0,12"
                      Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                      CornerRadius="6"
                      Padding="16,12"
                      BorderThickness="{Binding IsUnfilled, Converter={StaticResource BooleanToThicknessConverter}}"
                      BorderBrush="{Binding IsUnfilled, Converter={x:Static converters:BooleanToBrushConverter.Instance}, 
                                   ConverterParameter='Orange|Transparent'}">
                <Grid RowDefinitions="Auto,Auto,*" ColumnDefinitions="*,Auto">
                  
                  <!-- Placeholder Label -->
                  <SelectableTextBlock Grid.Row="0" Grid.Column="0"
                             Text="{Binding DisplayLabel}"
                             FontWeight="SemiBold"
                             FontSize="14"
                             Margin="0,0,0,6" />
                  
                  <!-- Warning Icon for Unfilled -->
                  <Border Grid.Row="0" Grid.Column="1"
                          IsVisible="{Binding IsUnfilled}"
                          Background="Orange"
                          CornerRadius="10"
                          Width="20"
                          Height="20"
                          VerticalAlignment="Top">
                    <SelectableTextBlock Text="!"
                               Foreground="White"
                               FontSize="12"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />
                  </Border>
                  
                  <!-- Placeholder Info -->
                  <SelectableTextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                             Text="{Binding OccurrenceCount, StringFormat='{}{0} výskytů'}"
                             FontSize="11"
                             Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                             Margin="0,0,0,8" />
                  
                  <!-- Input TextBox -->
                  <TextBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                           Text="{Binding InputValue}"
                           Watermark="Zadejte hodnotu pro tento zástupný symbol..."
                           TextWrapping="Wrap"
                           MinHeight="34"
                           MaxHeight="80"
                           AcceptsReturn="False"
                           VerticalAlignment="Stretch"
                           Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" />
                  
                </Grid>
              </Border>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>
      </ScrollViewer>
      
      <!-- Warning Message -->
      <Border Grid.Row="4"
              Background="#FFF3CD"
              BorderBrush="#FFEAA7"
              BorderThickness="1"
              CornerRadius="4"
              Padding="12,10"
              Margin="0,15,0,0">
        <Grid ColumnDefinitions="Auto,*">
          <Border Grid.Column="0"
                  Background="Orange"
                  CornerRadius="10"
                  Width="20"
                  Height="20"
                  VerticalAlignment="Top"
                  Margin="0,0,10,0">
            <SelectableTextBlock Text="!"
                       Foreground="White"
                       FontSize="12"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />
          </Border>
          <SelectableTextBlock Grid.Column="1"
                     Text="{Binding UnfilledWarningText}"
                     TextWrapping="Wrap"
                     FontSize="13"
                     Foreground="#856404" />
        </Grid>
      </Border>
      
      <!-- Instructions -->
      <SelectableTextBlock Grid.Row="5"
                 Text="Můžete pokračovat i s nevyplněnými zástupnými symboly. Použijte tlačítko 'Zpět' pro návrat k předchozímu kroku."
                 FontSize="12"
                 FontStyle="Italic"
                 TextWrapping="Wrap"
                 HorizontalAlignment="Center"
                 Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                 Margin="0,10,0,0" />
                 
    </Grid>
  </Border>

</UserControl>