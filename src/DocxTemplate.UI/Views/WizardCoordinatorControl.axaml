<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:DocxTemplate.UI.ViewModels"
             xmlns:views="using:DocxTemplate.UI.Views"
             xmlns:steps="using:DocxTemplate.UI.Views.Steps"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="DocxTemplate.UI.Views.WizardCoordinatorControl"
             x:DataType="vm:WizardCoordinatorViewModel">
             
    <Design.DataContext>
        <vm:WizardCoordinatorViewModel/>
    </Design.DataContext>

    <Grid>
        <!-- Mode Selection View -->
        <ContentControl IsVisible="{Binding ShowModeSelection}">
            <steps:Step0ModeSelectionView DataContext="{Binding ModeSelectionViewModel}" />
        </ContentControl>
        
        <!-- Active Wizard View -->
        <Grid IsVisible="{Binding !ShowModeSelection}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            
            <!-- Wizard Header with Back to Mode Selection -->
            <Border Grid.Row="0" 
                    Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}" 
                    Padding="20,10"
                    BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                    BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    
                    <Button Grid.Column="0"
                            Content="← Zpět na výběr režimu"
                            Command="{Binding BackToModeSelectionCommand}"
                            Classes="secondary" />
                    
                    <TextBlock Grid.Column="1"
                              Text="{Binding Title}"
                              FontSize="18"
                              FontWeight="Bold"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center" />
                              
                    <!-- Step Indicator -->
                    <TextBlock Grid.Column="2"
                              Text="{Binding CurrentWizard.StepIndicatorText}"
                              VerticalAlignment="Center"
                              Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
                </Grid>
            </Border>
            
            <!-- Wizard Content -->
            <views:WizardControl Grid.Row="1" 
                                Name="WizardContentPresenter"
                                DataContext="{Binding CurrentWizard}" />
            
            <!-- Wizard Navigation -->
            <Border Grid.Row="2"
                    Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                    BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                    BorderThickness="0,1,0,0"
                    Padding="20,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    
                    <!-- Progress/Status info -->
                    <TextBlock Grid.Column="0" 
                              Text="{Binding CurrentWizard.CurrentStepTitle}"
                              VerticalAlignment="Center"
                              FontWeight="SemiBold" />
                    
                    <!-- Back Button -->
                    <Button Grid.Column="1"
                            Content="Zpět"
                            Command="{Binding CurrentWizard.BackCommand}"
                            IsVisible="{Binding CurrentWizard.IsBackButtonVisible}"
                            Margin="0,0,10,0"
                            MinWidth="80" />
                    
                    <!-- Next Button -->
                    <Button Grid.Column="2"
                            Content="{Binding CurrentWizard.NextButtonText}"
                            Command="{Binding CurrentWizard.NextCommand}"
                            IsVisible="{Binding CurrentWizard.IsNextButtonVisible}"
                            Classes="accent"
                            Margin="0,0,10,0"
                            MinWidth="80" />
                    
                    <!-- Finish Button -->
                    <Button Grid.Column="3"
                            Content="Dokončit"
                            Command="{Binding CurrentWizard.FinishCommand}"
                            IsVisible="{Binding CurrentWizard.IsFinishButtonVisible}"
                            Classes="accent"
                            MinWidth="80" />
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>